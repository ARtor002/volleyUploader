<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.SplashScreen"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imageSplash"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_happiness_running" />


    <TextView
        android:id="@+id/connectErrorTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/toastConnectFailed"
        android:textColor="@color/colorWhite2"
        android:textSize="14sp"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/round_refresh_24"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>

</RelativeLayout>